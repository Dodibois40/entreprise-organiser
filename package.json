{
  "name": "entreprise-organiser",
  "version": "1.0.0",
  "private": true,
  "description": "Application CRM pour entreprise de menuiserie",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start": "npm run dev",
    "start:backend": "cd backend && npm run dev",
    "start:frontend": "cd frontend && npm run dev",
    "start:db": "cd backend && npx prisma studio --port 5555",
    "build": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "concurrently \"cd backend && npm test\" \"cd frontend && npm test\"",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "prisma:studio": "cd backend && npx prisma studio --port 5555",
    "prisma:migrate": "cd backend && npx prisma migrate dev",
    "prisma:seed": "cd backend && npx prisma db seed",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:headed": "npx playwright test --headed",
    "test:all": "npm run test && npm run test:e2e",
    "db:setup": "pnpm --filter backend db:setup",
    "db:seed": "pnpm --filter backend db:seed",
    "db:reset": "pnpm --filter backend db:reset",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "prepare": "husky"
  },
  "keywords": [
    "crm",
    "menuiserie",
    "entreprise",
    "gestion",
    "nodejs",
    "react",
    "nestjs",
    "prisma",
    "postgresql"
  ],
  "author": "Votre Nom",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@mantine/carousel": "^8.0.1",
    "@mantine/notifications": "^8.0.1",
    "@prisma/client": "6.8.2",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.4.9",
    "framer-motion": "^12.12.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.0",
    "prop-types": "15.7.2",
    "react-chartjs-2": "^5.3.0",
    "react-countup": "^6.5.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.30",
    "axios": "^1.9.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^16.0.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.5.3",
    "prisma": "^6.8.2",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "typescript-eslint": "^8.32.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "."
  }
}
